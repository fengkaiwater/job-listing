<h2>个人中心</h2>

<div class="col-md-4 col-md-offset-4">
  <div class="panel panel-default">
    <!-- Default panel contents -->
    <div class="panel-heading">用户资料</div>

    <!-- List group -->
    <ul class="list-group">
      <li class="list-group-item">用户名：<%= current_user.username %></li>
      <li class="list-group-item">E-mail：<%= current_user.email %></li>
    </ul>
  </div>
  <%= link_to("编辑个人资料", edit_account_user_path(current_user), class: "btn btn-md btn-default")  %>
  <%= link_to("更改密码", edit_user_registration_path(current_user), class: "btn btn-md btn-default")  %>
</div>
