<nav class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <div class="navbar-header">
      <ul class="nav navbar-nav">
        <li>
          <a class="navbar-brand" href="/"><i class="fa fa-paper-plane-o" aria-hidden="true">-网站首页</i></a>
        </li>
        <li>
          <a class="navbar-brand" href="/jobs">工作</a>
        </li>
      </ul>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <!-- search not include function -->
      <div class="col-xs-6 col-md-4">
        <%= form_tag search_jobs_path, :method => :get, :class => "navbar-form navbar-left" do %>
          <div class="input-group">
            <input type="text" class="form-control" name="q" value="<%= params[:q] %>" placeholder="搜索职位...">
            <span class="input-group-btn">
              <button type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span>
              </button>
            </span>
          </div>
        <% end %>
      </div>
      <!-- /.search not include function -->

      <!-- for devise -->
      <ul class="nav navbar-nav navbar-right">
        <li>
          <% if !current_user %>
            <li style="font-size: 16px"><a href="#" data-toggle="modal" data-target="#signup-modal">注册</a></li>
            <li style="font-size: 16px"><a href="#" data-toggle="modal" data-target="#login-modal">登陆</a></li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= current_user.display_username %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% if current_user.admin? %>
                  <li><%= link_to("简历管理", admin_jobs_path) %></li>
                <% end %>
                <li> <%= link_to("个人中心", account_user_path(current_user))%></li>
                <li> <%= link_to("退出", destroy_user_session_path, method: :delete) %></li>
              </ul>
            </li>
          <% end %>
        </li>
      </ul>
      <!-- /.for devise -->

      <!--  devise modal -->
      <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog" role="document">
          <div class="loginmodal-container">
            <%= render "devise/sessions/new" %>
          </div>
        </div>
      </div>

      <div class="modal fade" id="signup-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog">
          <div class="loginmodal-container">
            <%= render "devise/registrations/new" %>
          </div>
        </div>
      </div>
      <!-- /.for devise modal-->
    </div>
  </div>
</nav>
