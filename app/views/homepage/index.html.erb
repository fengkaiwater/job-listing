                      <%= image_tag("attendand.png") %>
                  </div>
                  <div>
                    <h3>乘务员</h3>
                    <p>Attendand</p>
                  </div>
                <% end %>
              </div>
              <div class="col-md-3 category-list">
                <%= link_to jobs_path(:category => "机务") , class: "category_3" do %>
