                      <%= image_tag("engineer.png") %>
                  </div>
                  <div>
                    <h3>工程师</h3>
                    <p>Engineer</p>
                  </div>
                <% end %>
              </div>
              <div class="col-md-3 category-list">
                <%= link_to jobs_path , class: "category_all" do %>
                  <div class="expert-box">
                      <%= image_tag("all-title.png") %>
                  </div>
                  <div>
                    <h3>所有职位</h3>
                    <p>All Jobs</p>
                  </div>
                <% end %>
              </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
