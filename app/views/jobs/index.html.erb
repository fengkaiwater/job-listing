<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>wage_lower_bound</th>
      <th>wage_upper_bound</th>
      <th>contact_email</th>
      <th>Action</th>
      <th>created_at</th>
    </tr>
  </thead>

  <% @jobs.each do |job| %>
    <tr>
      <td><%= link_to(job.title, job_path(job)) %></td>
      <td><%= job.wage_lower_bound %></td>
      <td><%= job.wage_upper_bound %></td>
      <td><%= job.contact_email %></td>
      <td>
        <%= link_to("Edit", edit_job_path(job)) %>
        <%= link_to("Delete", job_path(job), method: :delete, :data => { :confirm => "Are you sure?" }) %>
      </td>
      <td><%= job.created_at.strftime("%Y-%m-%d (%Z)") %></td>
    </tr>
  <% end %>
</table>
