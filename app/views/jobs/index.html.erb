<div class="pull-right" style="margin-bottom:20px;">
  <%= link_to("Add a job", new_job_path, :class => "btn btn-info") %>
</div>

<table class="table table-bordered">
  <% @jobs.each do |job| %>
    <tr>
      <td><%= link_to(job.title, job_path(job)) %></td>
      <td><%= link_to("Edit", edit_job_path(job)) %></td>
      <td><%= link_to("Delete", job_path(job), method: :delete, :data => { :confirm => "Are you sure?" }) %></td>
      <td><%= job.created_at.strftime("%Y-%m-%d (%Z)") %></td>
    </tr>
  <% end %>
</table>
