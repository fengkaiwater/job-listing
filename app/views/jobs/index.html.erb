<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Sort
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li>
      <%= link_to("wage_upper_bound", jobs_path(:order => "by_upper_bound")) %>
    </li>
    <li>
      <%= link_to("wage_lower_bound", jobs_path(:order => "by_lower_bound")) %>
    </li>
    <li>
      <%= link_to("created_at", jobs_path) %>
    </li>
  </ul>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Wage Upper</th>
      <th>Wage Lower</th>
      <th>Contact Email</th>
      <th>Action</th>
      <th>Created At</th>
    </tr>
  </thead>

  <tbody>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td><%= job.wage_upper_bound %></td>
    <td><%= job.wage_lower_bound %></td>
    <td><%= job.contact_email %></td>
    <td>
      <%= link_to("Edit", edit_job_path(job)) %>
      |
      <%= link_to("Delete", job_path(job), method: :delete, :data => { confirm: "Are you sure?" }) %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
