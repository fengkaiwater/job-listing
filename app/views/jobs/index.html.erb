<div class="dropdown clearfix pull-right">
  <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
    Sort
    <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li>
      <%= link_to("Wage lower bound", jobs_path(:order => "by_lower_bound")) %>
    </li>
    <li>
      <%= link_to("Wage upper bound", jobs_path(:order => "by_upper_bound")) %>
    </li>
    <li>
      <%= link_to("Created Time", jobs_path) %>
    </li>
  </ul>
</div>

<table class="table table-boldered">
  <thead>
    <tr>
      <th>职位</th>
      <th>薪资上线</th>
      <th>薪资下限</th>
      <th>联系方式</th>
      <th>动作</th>
      <th>发布时间</th>
    </tr>
  </thead>

  <tbody>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= link_to(job.title, job_path(job)) %>
    </td>
    <td>
      <%= job.wage_upper_bound %>
    </td>
    <td>
      <%= job.wage_lower_bound %>
    </td>
    <td>
      <%= job.contact_email %>
    </td>
    <td>
      <%= link_to("Edit", edit_job_path(job)) %> |
      <%= link_to("Destroy", job_path(job), :method => :delete, :data => { :comfirm => "Are you sure?" }) %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
  </tbody>
</table>
