<div class="pull-right" style="margin-bottom:20px;">
  <%= link_to("Add a job", new_admin_job_path, :class => "btn btn-info") %>
</div>

<table class="table table-bordered table-striped custab">
  <thead>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>resume counts</th>
      <th>wage_lower_bound</th>
      <th>wage_upper_bound</th>
      <th>contact_email</th>
      <th>Action</th>
      <th>created_at</th>
    </tr>
  </thead>

  <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= render_job_status(job) %>
      </td>
      <td><%= link_to(job.title, admin_job_path(job)) %></td>
      <td><%= link_to(job.resumes.count, admin_job_resumes_path(job)) %></td>
      <td><%= job.wage_lower_bound %></td>
      <td><%= job.wage_upper_bound %></td>
      <td><%= job.contact_email %></td>
      <td>
        <%= link_to("Edit", edit_admin_job_path(job), :class => "btn btn-xs btn-info") %>
        |
        <%= link_to("Delete", admin_job_path(job), method: :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure?" }) %>
        |
        <% if job.is_hidden %>
          <%= link_to("Public", publish_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-success") %>
        <% else %>
          <%= link_to("Hide", hide_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-warning") %>
        <% end %>
      </td>
      <td><%= job.created_at.strftime("%Y-%m-%d (%Z)") %></td>
    </tr>
  <% end %>
</table>
